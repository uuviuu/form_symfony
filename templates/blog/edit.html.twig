{% extends 'base.html.twig' %}
{% block title %}Изменить пост {{ post.title }}{% endblock %}
{% block body %}

{% form_theme form _self %}

<div class="container mt-5">
    {{ form_start(form) }}
        <div class="row">
            <div class="col-xl-8 col-lg-8 col-sm-12 col-12 m-auto">
                <div class="card shadow">
                    <div class="card-header">
                        <h4 class="card-title"> Изменить пост {{ post.title}}</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            {{ form_row(form.title) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.slug) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.description) }}
                        </div>
                    </div>
                    <div class="card-footer">
                        {{ form_row(form.save) }}
                    </div>
                </div>
            </div>
        </div>    
    {{ form_end(form) }}
</div>

{% endblock %}


